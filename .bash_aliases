alias \
    uc="sudo apt -y update && sudo apt -y upgrade && sudo apt -y dist-upgrade && snap refresh && flatpak update && sudo apt clean && sudo apt autoclean && sudo apt autoremove" \
    vi="nvim" \
    vim="nvim" \
    vrc="nvim ~/.config/nvim/init.vim" \
    cp="cp -iv" \
    mv="mv -iv" \
    rm="rm -vI" \
    mkd="mkdir -pv" \
    ls="ls -hN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    diff="diff --color-auto"
